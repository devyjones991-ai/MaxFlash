# MaxFlash Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# EXCHANGE API CREDENTIALS (Optional for testnet, Required for live trading)
# ============================================================================
# Get API keys from your exchange (Binance, Bybit, etc.)
# NEVER commit this file with real keys to git!

EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Use testnet/paper trading (recommended for testing)
# Set to "false" only when ready for live trading
USE_TESTNET=true

# Account balance for risk calculations (in USD)
ACCOUNT_BALANCE=10000

# Risk Management Settings
MAX_RISK_PER_TRADE=0.01        # 1% risk per trade
MAX_PORTFOLIO_RISK=0.05        # 5% total portfolio risk
DAILY_LOSS_LIMIT=0.02          # 2% daily loss limit (circuit breaker)
MAX_POSITIONS=10               # Maximum concurrent positions

# ============================================================================
# ML MODEL CONFIGURATION
# ============================================================================

# Path to trained LSTM model (leave empty to use untrained model)
ML_MODEL_PATH=models/lstm_model.h5

# ML prediction threshold (0.5-1.0, higher = more conservative)
ML_CONFIDENCE_THRESHOLD=0.6

# ============================================================================
# LLM CONFIGURATION (Ollama)
# ============================================================================

# Enable local LLM
USE_LOCAL_LLM=true

# Ollama API URL
OLLAMA_BASE_URL=http://localhost:11434

# Model to use (e.g., qwen2.5:7b, deepseek-r1:32b)
LLM_MODEL_NAME=qwen2.5:7b

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Enable CORS (for web dashboard)
ENABLE_CORS=true

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=true
LOG_FILE_PATH=logs/maxflash.log

# ============================================================================
# NOTIFICATIONS (Optional)
# ============================================================================

# Discord Bot Token (for alerts)
DISCORD_BOT_TOKEN=

# Discord Channel ID (where to send alerts)
DISCORD_CHANNEL_ID=

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID
TELEGRAM_CHAT_ID=

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Cache TTL in minutes
CACHE_TTL_MINUTES=5

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# Enable Redis caching (requires Redis server)
USE_REDIS_CACHE=false
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# WARNINGS
# ============================================================================

# ⚠️  IMPORTANT SAFETY NOTES:
# 1. Always test with USE_TESTNET=true first
# 2. Start with small ACCOUNT_BALANCE in live trading
# 3. Never risk more than 1% per trade
# 4. Enable daily loss limits
# 5. Monitor your bot regularly
# 6. Keep your API keys secure
# 7. Use IP whitelisting on exchange
# 8. Enable 2FA on your exchange account
